<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ChooseFragment">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/images__1_" />

    <TextView
        android:id="@+id/levelNo"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_to_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/levelScore"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_to_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/levelNo"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/puzzleNo"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_to_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/levelScore"
        android:textColor="@color/black"
        android:gravity="center"/>



    <TextView
        android:id="@+id/text_question"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/shape_style"
        android:backgroundTint="#F3AB42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="25sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_answer1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_style"
        android:backgroundTint="#F3AB42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_question"
        android:textColor="@color/white"
        android:textSize="25sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_answer2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_style"
        android:backgroundTint="#F3AB42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_answer1"
        android:textColor="@color/white"
        android:textSize="25sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_answer3"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_style"
        android:backgroundTint="#F3AB42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_answer2"
        android:textColor="@color/white"
        android:textSize="25sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_answer4"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_style"
        android:backgroundTint="#F3AB42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_answer3"
        android:textColor="@color/white"
        android:textSize="25sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_skip"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="5dp"
        android:text="Skip"
        android:background="@drawable/shape_style"
        android:backgroundTint="#F3AB42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_answer4"
        android:textColor="@color/white"
        android:textSize="25sp"/>


    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/_a4130c1c186f0f470b1827855886c9f"
       />


</androidx.constraintlayout.widget.ConstraintLayout>